<UserControl x:Class="GameComponents.KirjainlaattaPussi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100" Name="kirjainlaatta_pussi">
    <StackPanel Name="container" MinHeight="50" MinWidth="100">
        <Label Name="display" Height="{Binding ElementName=container, Path=ActualHeight}" HorizontalContentAlignment="Right" Background="Gainsboro" Foreground="Green" BorderBrush="Black" BorderThickness="5" FontSize="24" FontFamily="Quartz MS" Content="{Binding ElementName=kirjainlaatta_pussi, Path=LaattojaJaljella, UpdateSourceTrigger=PropertyChanged}"></Label>
    </StackPanel>
</UserControl>
